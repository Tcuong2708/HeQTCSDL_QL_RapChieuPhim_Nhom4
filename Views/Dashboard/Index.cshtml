@model QuanLyRapChieuPhim.Models.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Bảng điều khiển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dashboard-stats-grid {
        display: grid;
        /* SỬA LẠI: Bỏ auto-fit, ép thành 2 cột (1fr 1fr) */
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background-color: #fff;
        border-radius: 8px;
        padding: 25px;
        display: flex;
        align-items: center;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.08);
        }

        .stat-card .icon {
            font-size: 36px;
            padding: 20px;
            border-radius: 50%;
            margin-right: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-card .info .stat-title {
            font-size: 16px;
            color: #6c757d;
            text-transform: uppercase;
            font-weight: 600;
        }

        .stat-card .info .stat-number {
            font-size: 28px;
            font-weight: 700;
            color: #333;
        }

        /* Màu sắc cho các icon */
        .stat-card.revenue .icon {
            background-color: #e6f7ff;
            color: #007bff;
        }

        .stat-card.tickets .icon {
            background-color: #e6fffb;
            color: #17a2b8;
        }

        .stat-card.users .icon {
            background-color: #fff0e6;
            color: #fd7e14;
        }

        .stat-card.movies .icon {
            background-color: #fdeeeF;
            color: #dc3545;
        }

    .chart-container {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }
</style>

<!-- Header của trang -->
<div class="content-header">
    <h1>@ViewBag.Title</h1>
    <small>Tổng quan hệ thống</small>
</div>

<!-- Lưới thống kê -->
<div class="dashboard-stats-grid">

    <!-- Thẻ Doanh thu -->
    <div class="stat-card revenue">
        <div class="icon">
            <i class="fas fa-dollar-sign"></i>
        </div>
        <div class="info">
            <div class="stat-title">Tổng Doanh Thu</div>
            <div class="stat-number">@Model.TotalRevenue.ToString("N0") ₫</div>
        </div>
    </div>

    <!-- Thẻ Vé đã bán -->
    <div class="stat-card tickets">
        <div class="icon">
            <i class="fas fa-ticket-alt"></i>
        </div>
        <div class="info">
            <div class="stat-title">Vé Đã Bán</div>
            <div class="stat-number">@Model.TicketsSold</div>
        </div>
    </div>

    <!-- Thẻ Khách hàng -->
    <div class="stat-card users">
        <div class="icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="info">
            <div class="stat-title">Khách Hàng</div>
            <div class="stat-number">@Model.CustomerCount</div>
        </div>
    </div>

    <!-- Thẻ Phim -->
    <div class="stat-card movies">
        <div class="icon">
            <i class="fas fa-film"></i>
        </div>
        <div class="info">
            <div class="stat-title">Số Lượng Phim</div>
            <div class="stat-number">@Model.MovieCount</div>
        </div>
    </div>
</div>

<!-- Nơi để Biểu đồ (Sau này) -->
<div class="chart-container">
    <h4>Thống kê (Chưa có dữ liệu)</h4>
    <p>Đây là nơi bạn có thể thêm biểu đồ doanh thu theo tháng...</p>
</div>