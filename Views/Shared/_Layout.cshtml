<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trang quản trị</title>

    <link rel="stylesheet" href="~/Content/Site.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <script src="https://unpkg.com/jwt-decode/build/jwt-decode.js"></script>
</head>
<body>

    <header class="top-bar">
        <div class="search-bar">
            <i class="fa-solid fa-search"></i>
            <input type="text" placeholder="Tìm kiếm phim, lịch chiếu, người dùng...">
        </div>
        <div class="user-area">
            <div class="icon-group">
                <i class="fa-solid fa-bell"></i>
                <span class="notification-badge">3</span>
            </div>
            <div class="icon-group">
                <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="user-profile">
                <span>Xin chào, Admin</span>
                <img src="https://i.pravatar.cc/30" alt="Avatar">
            </div>
        </div>
    </header>

    <div class="page-body">

        <aside class="sidebar">
            <ul class="nav-menu">
                <li>
                    <a href="@Url.Action("Index", "Dashboard")">
                        <i class="fas fa-tachometer-alt"></i>
                        <span>Bảng điều khiển</span>
                    </a>
                </li>

                <li class="nav-header">QUẢN LÝ CHUNG</li>
                <li>
                    <a href="@Url.Action("Index", "Phim")" class="active">
                        <i class="fas fa-film"></i>
                        <span>Quản lý Phim</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "SuatChieu")">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Quản lý Lịch chiếu</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Ve")">
                        <i class="fas fa-ticket-alt"></i>
                        <span>Quản lý Vé</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "HoaDon")">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <span>Quản lý Hóa đơn</span>
                    </a>
                </li>

                <li class="nav-header">HỆ THỐNG RẠP</li>
                <li>
                    <a href="@Url.Action("Index", "Rap")">
                        <i class="fas fa-store"></i>
                        <span>Quản lý Rạp</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "PhongChieu")">
                        <i class="fas fa-chair"></i>
                        <span>Quản lý Phòng chiếu</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Ghe")">
                        <i class="fas fa-couch"></i>
                        <span>Quản lý Ghế</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "Quay")">
                        <i class="fas fa-concierge-bell"></i>
                        <span>Quản lý Quầy Dịch vụ</span>
                    </a>
                </li>

                <li class="nav-header">HỆ THỐNG</li>
                <li>
                    <a href="@Url.Action("Index", "NhanVien")">
                        <i class="fas fa-users-cog"></i>
                        <span>Quản lý Nhân viên</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "KhachHang")">
                        <i class="fas fa-users"></i>
                        <span>Quản lý Khách hàng</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Account")">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </aside>
        <main class="main-content">
            @RenderBody()
        </main>

    <script src="~/js/script.js"></script>

    
</body>
</html>



