@{
    ViewBag.Title = "Trang chủ";
}

<style>
    .welcome-container {
        padding: 40px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        text-align: center;
    }

    .welcome-label {
        font-size: 2.5rem;
        font-weight: 300;
        color: #555;
        margin-top: 0;
        margin-bottom: 10px;
    }

    /* Đây là "@ViewBag chữ lớn" mà bạn yêu cầu */
    .welcome-username {
        font-size: 4.5rem;
        font-weight: 700;
        color: #4338CA; /* Màu tím/xanh giống trang Login */
        margin-top: 0;
        margin-bottom: 20px;
    }

    .welcome-subtitle {
        font-size: 1.25rem;
        color: #6c757d;
    }
</style>

<div class="welcome-container">

    <!-- 1. Label Chào mừng -->
    <h2 class="welcome-label">Chào mừng,</h2>

    <!-- 2. @ViewBag chữ lớn -->
    <h1 class="welcome-username">@ViewBag.WelcomeMessage</h1>

    <p class="welcome-subtitle">
        Bạn đã đăng nhập thành công vào hệ thống Quản lý Rạp chiếu phim.
    </p>
</div>